<div class="profile-page">
  <div class="container emp-profile">
    <form method="post">
      <div class="row">
        <div class="col-md-4">
          <div class="profile-img">
            <%= image_tag current_user.image.url, width: "250px", height: "250px", style: "max-height: 250px" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="profile-head">
            <h5>
              Nguyễn Ngọc Hải
            </h5>
            <% if (current_user.role == "host") %>
              <h6>Người cho thuê nhà</h6>
            <% else %>
              <h6>Người tìm nhà</h6>
            <% end %>
            <p class="proile-rating"><span></span></p>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Thông tin</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-2">
          <a href="/" class="profile-edit-btn btn btn-primary" name="btnAddMore">Trang chủ</a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
          <div class="tab-content profile-tab" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <div class="row">
                <div class="col-md-6">
                  <label>Họ và tên</label>
                </div>
                <div class="col-md-6">
                  <p><%= current_user.username %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Địa chỉ email</label>
                </div>
                <div class="col-md-6">
                  <p><%= current_user.email %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Số điện thoại</label>
                </div>
                <div class="col-md-6">
                  <p><%= current_user.phone %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Địa chỉ</label>
                </div>
                <div class="col-md-6">
                  <p><%= current_user.address %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label>Vai trò</label>
                </div>
                <div class="col-md-6">
                  <% if (current_user.role = "host") %>
                    <p>Người cho thuê nhà</p>
                  <% else %>
                    <p>Người tìm nhà</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  <%= render "module_script/home_page" %>
</div>
