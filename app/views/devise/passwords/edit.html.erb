<section class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-6 login-sec">
        <h2 class="text-center title-login">CHANGE | FHouse</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_for(resource,
                   as: resource_name,
                   url: password_path(resource_name),
                   html: { class: "login-form", method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.label :password, "Mật khẩu mới", { class: "text-uppercase" } %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, placeholder: "*********", autocomplete: "autocomplete", class: "form-control", required: "required" %>
          </div>
          <div class="form-group">
            <%= f.label "Xác nhận lại mật khẩu", { class: "text-uppercase" } %>
            <%= f.password_field :password_confirmation, placeholder: "*********", autocomplete: "autocomplete", class: "form-control", required: "required" %>
          </div>
          <div class="actions">
            <%= f.submit "Reset password", { class: "btn btn-login float-right" } %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
        <div class="copy-text">Created with <i class="fa fa-heart"></i> by FHouse</div>
      </div>
      <%= render "shared/slide_show_login"%>
    </div>
  </div>
</section>
