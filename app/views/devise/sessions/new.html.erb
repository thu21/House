<section class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-6 login-sec">
        <h2 class="text-center title-login">LOGIN | FHouse</h2>
        <div class="container-fluid">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
        <%= form_for(resource,
                   as: resource_name,
                   url: session_path(resource_name),
                   html: { class: "login-form" }) do |f| %>
          <div class="form-group">
            <%= f.label :email, { class: "text-uppercase" } %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "fhouse@gmail.com", autocomplete: "email", class: "form-control", required: "required" %>
          </div>
          <div class="form-group">
            <%= f.label :password, { class: "text-uppercase" } %><br />
            <%= f.password_field :password, placeholder: "************", autocomplete: "current-password", class: "form-control", required: "required" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, { class: "form-check-label" } %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", { class: "btn btn-login float-right" } %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
        <div class="copy-text">Created with <i class="fa fa-heart"></i> by FHouse</div>
      </div>
      <%= render "shared/slide_show_login"%>
    </div>
  </div>
</section>
