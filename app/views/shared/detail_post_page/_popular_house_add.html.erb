<article class="post">
  <figure class="post-thumb">
    <img style="width: 80px; height: 85px;" src=<%= local_assigns[:image] %> class="radius-image" alt="" />
  </figure>
  <div class="text">
    <%= link_to local_assigns[:house][:title], house_path(local_assigns[:house]) %>
    <div class="post-info"><%= local_assigns[:house][:address] %></div>
  </div>
</article>
